{
  "extends": "@boilerplate/config/tsconfig.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "declaration": true,
    "declarationMap": true,
    "types": ["jest", "@testing-library/jest-dom", "node"],
    "incremental": false,
    "noEmit": false,
    "lib": ["dom", "dom.iterable", "es6", "es2017"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}