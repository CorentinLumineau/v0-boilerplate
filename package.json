{
  "private": true,
  "packageManager": "pnpm@10.10.1",
  "workspaces": [
    "apps/web",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "type-check": "turbo run type-check",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch",
    "test:ci": "turbo run test:ci",
    "test:monorepo": "NODE_OPTIONS=\"--max-old-space-size=2048\" jest --maxWorkers=2",
    "test:monorepo:coverage": "NODE_OPTIONS=\"--max-old-space-size=2048\" jest --coverage --maxWorkers=2",
    "clean": "turbo run clean",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,md,json}\"",
    "web:dev": "pnpm --filter @boilerplate/web dev",
    "web:build": "pnpm --filter @boilerplate/web build",
    "web:start": "pnpm --filter @boilerplate/web start",
    "web:lint": "pnpm --filter @boilerplate/web lint",
    "web:type-check": "pnpm --filter @boilerplate/web type-check",
    "db:studio": "pnpm --filter @boilerplate/web db:studio",
    "db:migrate": "pnpm --filter @boilerplate/web db:migrate",
    "db:generate": "pnpm --filter @boilerplate/web db:generate",
    "db:reset": "pnpm --filter @boilerplate/web db:reset",
    "db:seed": "pnpm --filter @boilerplate/web db:seed",
    "check-env": "node scripts/check-env.js",
    "prepare": "husky"
  },
  "devDependencies": {
    "@types/node": "^22.17.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "ts-jest": "^29.2.5", 
    "prettier": "^3.6.2",
    "tsx": "^4.19.2",
    "turbo": "^2.5.5",
    "typescript": "^5.8.3"
  }
}
